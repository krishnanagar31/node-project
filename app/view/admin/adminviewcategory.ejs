<div class="container">
	<h1>View category</h1>
</div>
<div class="container" >
	<table class="table table-bordered table-stripped table-hover" >
		<tr>
			<th>S.no</th>
			<th>Category</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
		<%data.forEach(function(x,i){%>

		<tr>
			<td><%=i+1%></td>
			<td><%=x.name%></td>
			<td><a href="view_category/update/<%=x._id%>" class="btn btn-success">Edit</a></td>
			<td><button onclick="getId('<%= x._id %>')" data-target="#delModal" class="btn btn-danger" data-toggle="modal">Remove</buton></td>
		</tr>
		<%})%>
	</table>
</div>




<div class="modal fade" id="delModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">&times;</button>
			<h3>Remove !</h3>
			</div>
			<div class="modal-body">
			<p>Are you sure want to remove this category ?</p>
			</div>
			<div class="modal-footer">
			<button onclick="submit()" class="btn btn-success">OK</button>
			<button class="btn btn-primary">cancel</button>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	var url="";
	function getId(a)
	{
		url = "view_category/delete/"+a;
		//alert(url);
	}
	function submit()
	{
		window.location.href=url;
	}
</script>

